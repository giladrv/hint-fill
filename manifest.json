{
    "manifest_version": 3,
    "name": "HintFill",
    "description": "Suggests filling focused text fields with their placeholder text, on demand.",
    "version": "1.3.0",
    "permissions": [
        "scripting",
        "activeTab",
        "contextMenus"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "HintFill â€“ fill focused field with placeholder"
    },
    "commands": {
        "fill-placeholder": {
            "suggested_key": {
                "default": "Ctrl+Shift+P",
                "mac": "Command+Shift+P"
            },
            "description": "Fill focused field with its placeholder text"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "128": "icon128.png"
    }
}